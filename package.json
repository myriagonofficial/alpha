{
  "name": "alpha",
  "version": "0.6.0",
  "private": true,
  "homepage": "http://www.myriagonmusic.com/ALPHA_Game/",
  "authors": [
    "Myriagon",
    "Sylvain Pollet-Villard"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/myriagonofficial/alpha.git"
  },
  "main": "index.html",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "nw-build": "cpy package.json dist && build --tasks win-x64,linux-x64,mac-x64 --mirror https://dl.nwjs.io/ dist",
    "start": "run --x64 --mirror https://dl.nwjs.io/ dist"
  },
  "dependencies": {
    "gamepadcontroller": "^1.0.1",
    "hammerjs": "2.0.8",
    "howler": "^2.1.2",
    "vue": "^2.6.10"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^5.0.8",
    "@vue/cli-plugin-eslint": "^5.0.8",
    "@vue/cli-service": "^5.0.8",
    "babel-eslint": "^10.0.3",
    "cpy-cli": "^4.2.0",
    "eslint": "^6.6.0",
    "eslint-plugin-vue": "^6.0.1",
    "nw": "0.42.2",
    "nwjs-builder-phoenix": "^1.15.0",
    "postcss-nested": "^4.2.1",
    "postcss-simple-vars": "^5.0.2",
    "vue-template-compiler": "^2.6.10"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {
      "no-console": 0
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "postcss-nested": {},
      "postcss-simple-vars": {},
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "safari >= 13",
    "not ie <= 8"
  ],
  "build": {
    "nwVersion": "0.42.2",
    "output": "../binaries/",
    "targets": [
      "zip"
    ]
  },
  "window": {
    "width": 1280,
    "height": 1024,
    "fullscreen": true
  }
}
